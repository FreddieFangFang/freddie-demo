<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.weimob.saas.ec.limitation.dao.LimitStoreRelationshipDao">

  <resultMap id="BaseResultMap" type="com.weimob.saas.ec.limitation.entity.LimitStoreRelationshipEntity">
    <id column="id" jdbcType="BIGINT" property="id"/>
    <result column="pid" jdbcType="BIGINT" property="pid"/>
    <result column="limit_id" jdbcType="BIGINT" property="limitId"/>
    <result column="store_id" jdbcType="BIGINT" property="storeId"/>
    <result column="is_deleted" jdbcType="BIT" property="isDeleted"/>
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
  </resultMap>

  <sql id="Base_Column_List">
    id,
    pid,
    limit_id,
    store_id,
    is_deleted,
    create_time,
    update_time
  </sql>

  <insert id="batchInsertStoreRelationship" parameterType="java.util.List">
    INSERT INTO limit_store_relationship (
      pid,
      limit_id,
      store_id,
      is_deleted,
      create_time,
      update_time
      )
    VALUES
      <foreach collection="list" item="item" index="index" separator=",">
        (
          #{item.pid},
          #{item.limitId},
          #{item.storeId},
          0,
          now(),
          now()
        )
      </foreach>
  /*LimitStoreRelationshipDao.batchInsertStoreRelationship*/
  </insert>

  <update id="deleteStoreRelationship" parameterType="LimitStoreRelationshipEntity">
    UPDATE
      limit_store_relationship
    SET
      is_deleted = 1,
      update_time = NOW()
    WHERE
      pid = #{pid}
    AND limit_id=#{limitId}
  /*LimitStoreRelationshipDao.deleteStoreRelationship*/
  </update>

</mapper>